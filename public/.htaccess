# Optimizaciones para reducir TTFB (Time To First Byte)
<IfModule mod_headers.c>
    # Reducir latencia del servidor
    Header unset ETag
    Header set Connection keep-alive
    
    # Cache de recursos estáticos
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|webp|svg|woff|woff2|ttf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
        Header append Vary Accept-Encoding
    </FilesMatch>
    
    # Cache HTML optimizado
    <FilesMatch "\.(html|php)$">
        Header set Cache-Control "public, max-age=300"
        Header append Vary Accept-Encoding
    </FilesMatch>
</IfModule>

# ===== OPTIMIZACIONES APACHE/PHP =====

# Optimizar Apache
<IfModule mod_deflate.c>
    # Forzar compresión para todos los tipos
    SetOutputFilter DEFLATE
    SetEnvIfNoCase Request_URI \
        \.(?:gif|jpe?g|png)$ no-gzip dont-vary
    SetEnvIfNoCase Request_URI \
        \.(?:exe|t?gz|zip|bz2|sit|rar)$ no-gzip dont-vary
</IfModule>

# Optimizaciones PHP para reducir TTFB
<IfModule mod_php.c>
    # Optimizar memoria y ejecución
    php_value memory_limit 512M
    php_value max_execution_time 60
    php_value max_input_time 60
    
    # Buffer de salida optimizado
    php_value output_buffering 4096
    php_value zlib.output_compression On
    php_value zlib.output_compression_level 6
    
    # Optimizar sesiones
    php_value session.gc_maxlifetime 1440
    php_value session.gc_probability 1
    php_value session.gc_divisor 1000
    
    # Reducir overhead
    php_value expose_php Off
    php_value log_errors On
    php_value display_errors Off
</IfModule>

# Optimizar conexiones Keep-Alive
<IfModule mod_headers.c>
    Header set Connection "Keep-Alive"
    Header set Keep-Alive "timeout=5, max=100"
</IfModule>


