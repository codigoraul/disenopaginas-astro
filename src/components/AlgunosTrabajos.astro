<style>
  /* Limitar el ancho de las cards del proyecto a 390px */
  .project-swiper-card {
    max-width: 390px;
    width: 100%;
    margin: 0 auto;
    border-radius: 8px !important;
    overflow: hidden;
  }
  
  /* Permitir que las imágenes se vean completas dentro del contenedor de 390px */
  .project-swiper-card img {
    width: 100%;
    height: auto;
    object-fit: contain;
    max-width: 390px;
    border-radius: 8px !important;
  }
  
  /* Usar ancho MÁXIMO de la pantalla completa para el portafolio */
  .project-swiper {
    width: 100vw !important;
    margin-left: 0 !important;
    padding: 0 20px;
  }
  
  /* Contenedor fluid para el portafolio */
  .project-section .container-fluid {
    max-width: 100% !important;
    overflow: visible !important;
  }
  
  /* Asegurar que el container normal mantenga su comportamiento */
  .project-section .container {
    max-width: 1200px;
  }
  
  /* Asegurar que las slides se distribuyan correctamente */
  .project-swiper .swiper-wrapper {
    display: flex;
    align-items: stretch;
  }
  
  .project-swiper .swiper-slide {
    display: flex;
    height: auto;
    flex-shrink: 0;
  }
  
  /* Estilo para los títulos h4 - más pequeños para las cards más pequeñas */
  h4.mb-1 {
    font-size: 1.1rem;
  }
  
  /* Estilo para las URLs - un poco más pequeñas */
  .project-content a {
    font-size: 0.9rem;
    color: #6c757d;
  }
  
  .project-content a:hover {
    color: #2B4DFF;
  }
  
  /* Estilo para el h2 del título principal */
  .section-heading h2 {
    font-size: 36px !important;
  }
  
  /* Ajustar el padding del contenido para las cards más pequeñas */
  .project-content {
    padding: 15px;
  }
</style>