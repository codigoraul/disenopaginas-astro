---
// Componente Header para dise침opaginas.cl
import SocialLinks from './SocialLinks.astro';

// Ruta del logo en la carpeta public
const logoPath = '/assets/img/logo-disenopaginas.svg';

// Obtener la p치gina actual desde la URL
const currentPath = Astro.url.pathname;
---

<!-- Header Area-->
<header class="header-area style-two">
   <div class="header-top">
      <div class="container h-100 d-flex align-items-center justify-content-between">
         <!-- Left Side -->
         <div class="left-side d-flex align-items-center gap-4 gap-lg-5">
            <div class="d-flex align-items-center gap-2 text-white">
               <i class="ti ti-mail-filled"></i>
               <span class="d-none d-lg-block">codigoraul@gmail.com</span>
            </div>
            <div class="d-flex align-items-center gap-2 text-white">
               <i class="ti ti-map-pin-filled"></i>
               <span class="d-none d-lg-block">Santiago, Chile</span>
            </div>
            <div class="d-flex align-items-center gap-2 text-white">
               <i class="ti ti-phone"></i>
               <span class="d-none d-lg-block">+56 9 6176 5268</span>
            </div>
         </div>

         <!-- Right Side -->
         <div class="right-side">
            <SocialLinks variant="header" size="small" />
         </div>
      </div>
   </div>

   <nav class="navbar navbar-expand-lg">
      <div class="container">
         <!-- Navbar Brand -->
         <a class="navbar-brand" href="/">
            <img src={logoPath} alt="Dise침oP치ginas.cl" width="185" height="62">
         </a>

         <!-- Navbar Toggler -->
         <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#disenopaginasNav"
            aria-controls="disenopaginasNav" aria-expanded="false" aria-label="Toggle navigation">
            <i class="ti ti-category"></i>
         </button>

         <!-- Navbar Nav -->
         <div class="collapse navbar-collapse justify-content-end" id="disenopaginasNav">
            <ul class="navbar-nav">
               <li class="nav-item">
                  <a class={`nav-link ${currentPath === '/' ? 'active' : ''}`} href="/">Inicio</a>
               </li>
               <li class="nav-item">
                  <a class={`nav-link ${currentPath === '/servicios' || currentPath === '/servicios/' ? 'active' : ''}`} href="/servicios">
                     Servicios
                  </a>
               </li>
               <li class="nav-item">
                  <a class={`nav-link ${currentPath === '/tarifas' || currentPath === '/tarifas/' ? 'active' : ''}`} href="/tarifas">Tarifas</a>
               </li>
               <li class="nav-item">
                  <a class={`nav-link ${currentPath === '/portafolio' || currentPath === '/portafolio/' ? 'active' : ''}`} href="/portafolio">Portafolio</a>
               </li>
               <li class="nav-item">
                  <a class={`nav-link ${currentPath === '/blog' || currentPath === '/blog/' ? 'active' : ''}`} href="/blog">Blog</a>
               </li>
               <li class="nav-item">
                  <a class={`nav-link ${currentPath === '/contacto' || currentPath === '/contacto/' ? 'active' : ''}`} href="/contacto">Contacto</a>
               </li>
            </ul>
         </div>
      </div>
   </nav>
</header>

<script is:inline>
   // Sticky header
   document.addEventListener('DOMContentLoaded', function() {
      const header = document.querySelector('.header-area');
      
      function updateHeader() {
         if (header) {
            if (window.scrollY > 100) {
               header.classList.add('sticky-on');
            } else {
               header.classList.remove('sticky-on');
            }
         }
      }

      // Inicializar
      updateHeader();
      
      // Actualizar en scroll
      window.addEventListener('scroll', updateHeader, { passive: true });
   });
</script>

<style>
   .nav-link.active {
      color: #004597 !important;
      font-weight: 500;
   }
   
   .nav-link.active:hover {
      color: #00F4F3 !important;
   }
</style>