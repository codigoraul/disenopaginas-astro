---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import Formulario from '../components/Formulario.astro';
---

<Layout title="Contacto - Diseño de Páginas Web">
  <!-- Breadcrumb Section -->
  <Breadcrumb 
    title="Contáctanos" 
    currentPage="Contacto"
    bgImage="/assets/img/bg-img/bg-title.webp"
  />

  <!-- Contact Section -->
  <!-- Contact Page Section -->
   <div class="contact-page-section">
      


   </div>

   <!-- FAQ Wrapper -->
   <section class="faq-wrapper bg-secondary">
      <!-- Background -->
      <div class="bg-shape">
         <img src="assets/img/core-img/shape12.png" alt="">
      </div>

      <!-- Divider -->
      <div class="divider"></div>

      <div class="container">
         <div class="faq-contact-card align-items-center p-0">
            <!-- Contact Info Card -->
            <div class="contact-info-card">
              

               <!-- Phone Number Card -->
               <div class="info mt-4">
                 

                  <div class="contact-info-details">
                     <!-- Dirección -->
                     <div class="contact-item d-flex align-items-center mb-4">
                        <div class="contact-icon me-3">
                           <i class="ti ti-map-pin"></i>
                        </div>
                        <div>
                           <h6 class="mb-1">Dirección de Oficina</h6>
                           <p class="mb-0">Santiago, Chile</p>
                        </div>
                     </div>

                     <!-- Teléfono -->
                     <div class="contact-item d-flex align-items-center mb-4">
                        <div class="contact-icon me-3">
                           <i class="ti ti-phone"></i>
                        </div>
                        <div>
                           <h6 class="mb-1">Llámanos para Soporte:</h6>
                           <p class="mb-0">+56 9 6176 5268</p>
                        </div>
                     </div>

                     <!-- Email -->
                     <div class="contact-item d-flex align-items-center">
                        <div class="contact-icon me-3">
                           <i class="ti ti-mail"></i>
                        </div>
                        <div>
                           <h6 class="mb-1">Envíanos un Email:</h6>
                           <p class="mb-0">codigoraul@gmail.com</p>
                        </div>
                     </div>
                  </div>
               </div>
            </div>

            <!-- Contact Form Component -->
            <Formulario 
              title="Formulario de Contacto"
              subtitle="Escribenos y  nos pondremos en contacto a la brevedad"
            />
         </div>
      </div>

      <!-- Divider -->
      <div class="divider"></div>
   </section>

</Layout>

<style>
  .contact-small-card .icon {
    background-color: #4877E9;
  }
  #formMessage {
    margin-bottom: 1rem;
  }
  .alert {
    padding: 1rem;
    margin-bottom: 1rem;
    border: 1px solid transparent;
    border-radius: 0.25rem;
  }
  .alert-success {
    color: #0f5132;
    background-color: #d1e7dd;
    border-color: #badbcc;
  }
  .alert-danger {
    color: #842029;
    background-color: #f8d7da;
    border-color: #f5c2c7;
  }
  
  /* Cambiar el fondo de la sección bg-secondary a celeste claro */
  .faq-wrapper.bg-secondary {
    background-color: # !important;
  }
  .faq-contact-card .faq-contact-section {
    background-color: #cbfcff !important;
  }
  /* Estilos para la información de contacto */
  .contact-info-details {
    padding: 20px;
  }
  
  /* Quitar fondo blanco de TODOS los elementos de contacto */
  .contact-info-card,
  .faq-contact-card .contact-info-card,
  .phone-number-card,
  .contact-info-details,
  .contact-item {
    background-color: transparent !important;
    background: none !important;
    box-shadow: none !important;
    border: none !important;
  }

  /* Forzar transparencia en toda la columna izquierda */
  .faq-contact-card > div:first-child {
    background-color: transparent !important;
    background: none !important;
  }

  .contact-item {
    transition: all 0.3s ease;
  }

  .contact-item:hover {
    transform: translateX(5px);
  }

  .contact-icon {
    width: 50px;
    height: 50px;
    background-color: #004597;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .contact-icon i {
    font-size: 20px;
    color: white;
  }

  .contact-item h6 {
    font-size: 16px;
    font-weight: 600;
    color: #0B100F !important;
  }

  .contact-item p {
    font-size: 14px;
    color: #353938 !important;
  }

  .contact-info-card {
    display: flex
;
    justify-content: center;
}
.info.mt-4 {
  background: #ffffffd9;
    width: 409px;
    display: flex
;
    padding: 35px;
    justify-content: center;
}

@media screen and (min-width: 768px) {
   width: 74%;
}
</style>


