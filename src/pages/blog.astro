         </div>
      </div>

      <div class="divider-sm"></div>

      <!-- Pagination -->
      <div class="container">
         <ul class="softora-pagination list-unstyled">
            <li class="active"><a class="magnet-link" href="#">1</a></li>
            <li><a class="magnet-link" href="#">2</a></li>
            <li><a class="magnet-link" href="#">3</a></li>
            <li><a class="magnet-link" href="#"><i class="ti ti-chevron-right"></i></a></li>
