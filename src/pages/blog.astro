      </div>

      <!-- Divider -->
      <div class="divider"></div>
   </div>

   
</Layout>

<style>
   .blog-section {
      padding: 80px 0;
   }

   .blog-card {
      background: #fff;
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 5px 20px rgba(0,0,0,0.1);
      transition: all 0.3s ease;
      height: 100%;
   }

   .blog-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 30px rgba(0,0,0,0.15);
   }

   .post-img {
      position: relative;
      overflow: hidden;
   }

   .post-img img {
      width: 100%;
      height: 250px;
      object-fit: cover;
      transition: transform 0.3s ease;
   }

   .blog-card:hover .post-img img {
      transform: scale(1.05);
   }

   .post-body {
      padding: 25px;
   }

   .blog-meta {
      margin-bottom: 15px;
   }

   .blog-meta a {
      color: #666;
      text-decoration: none;
      font-size: 14px;
   }

   .blog-meta a:first-child {
      color: var(--primary-color);
      font-weight: 500;
   }

   .dot {
      width: 4px;
      height: 4px;
      background: #666;
      border-radius: 50%;
   }

   .post-title {
      font-size: 24px;
      font-weight: 600;
      line-height: 1.4;
      margin-bottom: 15px;
      color: #333;
      text-decoration: none;
      display: block;
   }

   .post-title:hover {
      color: var(--primary-color);
   }

   .read-more-btn {
      color: var(--primary-color);
      text-decoration: none;
      font-weight: 500;
      display: inline-flex;
      align-items: center;
      gap: 5px;
      transition: gap 0.3s ease;
   }

   .read-more-btn:hover {
      gap: 10px;
   }

   .softora-pagination {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 10px;
      margin-top: 40px;
   }

   .softora-pagination li {
      list-style: none;
   }

   .softora-pagination a {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 45px;
      height: 45px;
      border-radius: 50%;
      background: #f8f9fa;
      color: #666;
      text-decoration: none;
      transition: all 0.3s ease;
   }

   .softora-pagination li.active a,
   .softora-pagination a:hover {
      background: var(--primary-color);
      color: white;
   }

   .cta-wrapper {
      padding: 80px 0;
      color: white;
   }

   .cta-wrapper h2 {
      font-size: 2.5rem;
      font-weight: 700;
   }

   .cta-wrapper p {
      font-size: 1.1rem;
      line-height: 1.6;
   }

   @media (max-width: 768px) {
      .cta-wrapper h2 {
         font-size: 2rem;
      }
   }
</style> 