---
import Layout from '../layouts/Layout.astro';   
import Breadcrumb from '../components/Breadcrumb.astro';
import Services from '../components/Services.astro';
import Stats from '../components/Stats.astro';

---

<Layout title="Tarifas y Planes - Diseño de Páginas Web">




<!-- Breadcrumb -->
<Breadcrumb title="Tarifas y Planes" currentPage="Tarifas" />

<!-- Pricing Plan Section -->
<section class="pricing-section py-5">
   <div class="container">
      <div class="row justify-content-center">
         <div class="col-12 col-lg-8">
            <div class="section-heading text-center">
               
               <h2 class="mb-0">Planes y Precios</h2>
               <p class="mt-3">Tarifa se paga solo una vez - En 2 cuotas</p>
            </div>
         </div>
      </div>
   </div>

   <div class="divider-sm"></div>

   <div class="container">
      <div class="row g-4 align-items-start justify-content-center">
         <!-- Plan Básico -->
         <div class="col-12 col-md-6 col-lg-4">
            <div class="pricing-card-two wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="400ms">
               <!-- Package Name and Price -->
               <div class="packgae-name-price">
                  <h4>Plan Básico</h4>
                  <p class="mb-0">Ideal para pequeñas empresas</p>
                  <div class="border-top mt-4 mb-3"></div>
                  <h2 class="price-value mb-0" style="color: #004597;">$240.000<span>/Una vez</span></h2>
                  <p class="text-muted small">En 2 cuotas</p>
               </div>
               <!-- Package Content -->
               <ul class="packgae-content ps-0 list-unstyled">
                  <li>
                     <svg width="28" height="28">
                        <use href="#check-icon"></use>
                     </svg>
                     Hosting 1GB x 1 Año
                  </li>
                  <li>
                     <svg width="28" height="28">
                        <use href="#check-icon"></use>
                     </svg>
                     Sitio Autoadministrable
                  </li>
                  <li>
                     <svg width="28" height="28">
                        <use href="#check-icon"></use>
                     </svg>
                     1 a 4 Páginas o Secciones HTML
                  </li>
                  <li>
                     <svg width="28" height="28">
                        <use href="#check-icon"></use>
                     </svg>
                     Galería hasta 30 imágenes
                  </li>
                  <li>
                     <svg width="28" height="28">
                        <use href="#check-icon"></use>
                     </svg>
                     4 Servicios o Productos
                  </li>
                  <li>
                     <svg width="28" height="28">
                        <use href="#check-icon"></use>
                     </svg>
                     Slider Principal 4 imágenes
                  </li>
                  <li>
                     <svg width="28" height="28">
                        <use href="#check-icon"></use>
                     </svg>
                     Mapa de ubicación con Google
                  </li>
                  <li>
                     <svg width="28" height="28">
                        <use href="#check-icon"></use>
                     </svg>
                     1 Formulario de contacto
                  </li>
                  <li>
                     <svg width="28" height="28">
                        <use href="#check-icon"></use>
                     </svg>
                     3 Correos corporativos
                  </li>
               </ul>

               <!-- Button -->
               <a href="/contacto" class="btn shadow-sm btn-dark" style="background-color: #004597; border-color: #004597;">Contactar <i class="ti ti-arrow-up-right"></i></a>
            </div>
         </div>

         <!-- Plan Medio -->
         <div class="col-12 col-md-6 col-lg-4">
            <div class="pricing-card-two active wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="600ms">
               <!-- Package Name and Price -->
               <div class="packgae-name-price">
                  <h4>Plan Medio</h4>
                  <p class="mb-0">Perfecto para empresas medianas</p>
                  <div class="border-top mt-4 mb-3"></div>
