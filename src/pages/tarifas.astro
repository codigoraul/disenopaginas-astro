         <!-- Plan Avanzado -->
         <div class="col-12 col-md-6 col-lg-4">
            <div class="pricing-card-two wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="800ms">
               <!-- Package Name and Price -->
               <div class="packgae-name-price">
                  <h4>Plan Avanzado</h4>
                  <p class="mb-0">Para empresas grandes y complejas</p>
                  <div class="border-top mt-4 mb-3"></div>
                  <h2 class="price-value mb-0" style="color: #004597;">$400.000<span>/Una vez</span></h2>
                  <p class="text-muted small">En 2 cuotas</p>
               </div>
               <!-- Package Content -->
               <ul class="packgae-content ps-0 list-unstyled">
                  <li>
                     <svg width="28" height="28">
                        <use href="#check-icon"></use>
